@model ARAPlus.AspWebMitMVC.Models.Stichprobe

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
Anweisung: @ViewBag.Anweisung
<br />
 Name: @ViewBag.Stichprobe.Name
<h4>Stichprobe</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Englisch</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <a href="Movies/Details?@Model.StichprobeId"></a>
            <div class="form-group">
                <label asp-for="Abgabedatum" class="control-label"></label>
                <input asp-for="Abgabedatum" class="form-control" />
                <span asp-validation-for="Abgabedatum" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Gefahrengut" /> @Html.DisplayNameFor(model => model.Gefahrengut)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
